{
  "scripts": {
    "clean": "rm -rf build",
    "ozc": "oz compile",
    "compile": "truffle compile",
    "test": "truffle test",
    "test-verbose": "VERBOSE=true truffle test",
    "ganache": "ganache-cli --deterministic --port 8545 -l 10000000 -i 1666",
    "ganache-for-ci": "ganache-cli --deterministic --port 8545 -l 10000000 -i 1666 > /dev/null &",
    "oztest": "oz compile && npx mocha --timeout 10000 --exit --recursive",
    "coverage": "truffle run coverage",
    "coverage-report": "truffle run coverage && cat coverage/lcov.info | coveralls",
    "solium": "node_modules/.bin/solium -d contracts/ --fix-dry-run"
  },
  "dependencies": {
    "@ethersproject/solidity": "^5.0.3",
    "@openzeppelin/contract-loader": "^0.6.1",
    "@truffle/hdwallet-provider": "^1.0.40",
    "decimal.js": "^10.2.0",
    "ethlint": "^1.2.5",
    "ganache-cli": "^6.9.1",
    "truffle-assertions": "^0.9.2"
  },
  "devDependencies": {
    "@openzeppelin/cli": "^2.8.2",
    "@openzeppelin/contracts": "^3.1.0",
    "@openzeppelin/test-environment": "^0.1.4",
    "@openzeppelin/test-helpers": "^0.5.6",
    "@openzeppelin/truffle-upgrades": "^1.0.1",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eth-gas-reporter": "^0.2.17",
    "husky": "^4.2.5",
    "mocha": "^8.0.1",
    "solidity-coverage": "^0.7.10",
    "truffle": "^5.1.41"
  }
}
